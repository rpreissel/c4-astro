---
/**
 * C4 Architecture Diagrams - Detail Page
 * Shows individual C4 view with interactive diagram and references
 */
import type { GetStaticPaths } from 'astro';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { findC4Projects, getProjectViews, findC4ViewReferences, getComponentName } from '../../lib/likec4.mjs';
import { join } from 'node:path';

// Dynamically import all C4View components using Vite's glob import
// This automatically includes all files matching the pattern
const componentModules = import.meta.glob('../../components/C4View*.astro', { eager: true });

// Build a map from component name to component
const componentMap = Object.fromEntries(
  Object.entries(componentModules).map(([path, module]) => {
    // Extract component name from path: '../../components/C4ViewEcommerce.astro' -> 'C4ViewEcommerce'
    const match = path.match(/\/([^/]+)\.astro$/);
    const componentName = match ? match[1] : '';
    return [componentName, module.default];
  })
);

export const getStaticPaths: GetStaticPaths = async () => {
  const workspacePath = join(process.cwd(), '..', 'c4');
  const docsDir = join(process.cwd(), 'src', 'content', 'docs');
  const projectIds = await findC4Projects(workspacePath);
  
  const paths = [];
  
  for (const projectId of projectIds) {
    const views = await getProjectViews(workspacePath, projectId);
    
    for (const view of views) {
      const references = await findC4ViewReferences(projectId, view.id, docsDir);
      
      // Build slug: projectId/[folderPath/]viewId
      // Examples:
      //   - ecommerce/index (no folder)
      //   - ecommerce/abc/containers (with folder 'abc')
      const slugParts = [projectId];
      if (view.folderPath) {
        slugParts.push(view.folderPath);
      }
      slugParts.push(view.id);
      const slug = slugParts.join('/');
      
      paths.push({
        params: { 
          slug 
        },
        props: {
          projectId,
          viewId: view.id,
          viewTitle: view.title,
          viewDescription: view.description,
          viewType: view.type,
          viewMode: view.mode,
          viewPath: view.viewPath,
          folderPath: view.folderPath,
          references
        }
      });
    }
  }
  
  return paths;
};

interface Props {
  projectId: string;
  viewId: string;
  viewTitle: string;
  viewDescription: string | null;
  viewType: string;
  viewMode: string | null;
  viewPath: string;
  folderPath: string;
  references: Array<{slug: string, title: string}>;
}

const { projectId, viewId, viewTitle, viewDescription, viewType, viewMode, folderPath, references } = Astro.props;

// Get the expected component name for this project
const componentName = getComponentName(projectId);

// Look up the component in our map
const C4ViewComponent = componentMap[componentName];

if (!C4ViewComponent) {
  const availableComponents = Object.keys(componentMap).join(', ');
  throw new Error(
    `Failed to load C4 component for project "${projectId}".\n` +
    `Expected component: ${componentName}.astro\n` +
    `Available components: ${availableComponents}\n` +
    `Make sure the component file exists at: src/components/${componentName}.astro\n` +
    `Component files must follow the naming convention: C4View{PascalCaseProjectId}.astro`
  );
}

// For dynamic views with sequence mode
const displayVariant = viewMode === 'sequence' ? 'sequence' : undefined;

// Build full hierarchical path for display
const pathParts = [projectId];
if (folderPath) {
  pathParts.push(...folderPath.split('/'));
}
pathParts.push(viewTitle);
const fullPath = pathParts.join(' / ');
---

<StarlightPage frontmatter={{ 
  title: fullPath, 
  description: viewDescription || `C4 ${viewType} diagram: ${viewTitle}`,
  tableOfContents: false 
}}>
  <nav class="back-nav">
    <a href={`${import.meta.env.BASE_URL}/c4/`} class="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5"></path>
        <path d="M12 19l-7-7 7-7"></path>
      </svg>
      Alle C4-Diagramme
    </a>
  </nav>

  {viewDescription && (
    <p class="view-description">{viewDescription}</p>
  )}

  <div class="c4-diagram">
    <C4ViewComponent viewId={viewId} displayVariant={displayVariant} />
  </div>

  {references.length > 0 && (
    <section class="c4-references">
      <h2>Verwendet in</h2>
      <ul>
        {references.map(ref => (
          <li>
            <a href={`${import.meta.env.BASE_URL}/${ref.slug}/`}>{ref.title}</a>
          </li>
        ))}
      </ul>
    </section>
  )}
</StarlightPage>

<style>
